/* miniprogram/pages/playground/playground.wxss */

.page {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    position: relative;
}

.container {
    width: 100%;
    display: block;
}

/* 头部tab */

.head-bar {
    height: 60rpx;
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
}

.live {
    border-top-left-radius: 999rpx;
    border-bottom-left-radius: 999rpx;
    display: inline-block;
    width: 200rpx;
    height: 60rpx;
    /* background-color: #9EFAFF; */
    text-align: center;
    /* color: #4E7C7F; */
    font-size: 28rpx;
    line-height: 60rpx;
}

.discover {
    margin-left: 4rpx;
    border-top-right-radius: 999rpx;
    border-bottom-right-radius: 999rpx;
    display: inline-block;
    width: 200rpx;
    height: 60rpx;
    background-color: #89baff;
    text-align: center;
    color: #e6f0ff;
    font-size: 28rpx;
    line-height: 60rpx;
}

/* 底部发送按钮 */

.bottom-button {
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    text-align: center;
    z-index: 99;
}

.bottom-button image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    box-shadow: 0 4rpx 8rpx rgba(137, 186, 255, 0.5);
}
.bottom-button cover-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    margin-left: 324rpx;
    box-shadow: 0 4rpx 8rpx rgba(137, 186, 255, 0.5);
    z-index: 99;
}

/* 动态内容 */

.live-content {
    width: 100%;
    display: block;
    box-sizing: border-box;
    padding-bottom: 120rpx;
}

.live-content .item {
    width: 100%;
    height: auto;
    display: block;
}

.live-content .content {
    width: 100%;
    display: block;
    position: relative;
    overflow: hidden;
    /* box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2); */
}

.live-content .value {
    box-sizing: border-box;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #4e7c7f;
    margin: 40rpx auto 80rpx 40rpx;
}

.live-content .icons {
    position: absolute;
    left: 40rpx;
    bottom: 20rpx;
    width: auto;
}

.live-content .like-icon {
    width: 32rpx;
    height: 30rpx;
    vertical-align: bottom;
}

.live-content .comment-icon {
    width: 30rpx;
    height: 28rpx;
    margin-left: 20rpx;
    vertical-align: bottom;
}

.live-content .infos {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: auto;
}

.live-content .name {
    display: inline;
    margin-right: 20rpx;
    font-size: 20rpx;
    font-weight: 300;
    color: #4e7c7f;
    vertical-align: middle;
}

.live-content .profile {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

/* 评论 */

.live-content .comment-list {
    width: 100%;
    height: auto;
}

.live-content .comment-item {
    overflow: hidden;
    position: relative;
    margin: 10rpx;
    background-color: #eff9ff;
    box-sizing: border-box;
    border-radius: 20rpx;
}

.live-content .comment-value {
    margin: 24rpx 0 48rpx 30rpx;
    max-width: 500rpx;
    font-size: 20rpx;
    color: #4e7c7f;
}

.live-content .comment-info {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

.live-content .comment-profile {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.live-content .comment-name {
    display: inline;
    font-size: 20rpx;
    color: #4e7c7f;
    vertical-align: middle;
    margin-right: 20rpx;
    font-weight: 300;
}

/* 发现 */

.discover-content {
    width: 100%;
    padding-bottom: 120rpx;
}

.discover-content video {
    width: 710rpx;
    height: 400rpx;
    margin: 0 20rpx;
}
.discover-content .item{
    width: 100%;
    margin-bottom: 16rpx;
}
.discover-content .info{
    margin: 0 20rpx;
    height: 60rpx;
    position: relative;
    overflow: hidden;
}
.discover-content .title{
    line-height: 60rpx;
    font-size: 32rpx;
    margin-left: 20rpx;
    max-width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: rgba(0, 0, 0, 0.8);
}
.discover-content .name-and-profile{
    position: absolute;
    right: 0;
    height: 60rpx;
    display: block;
}

.discover-content .name{
    margin-right: 20rpx;
    font-size: 32rpx;
    color: rgba(0, 0, 0, 0.8);
    display: inline-block;
    vertical-align: middle;
}
.discover-content cover-image{
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}