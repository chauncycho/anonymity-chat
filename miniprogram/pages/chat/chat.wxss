/* miniprogram/pages/chat/chat.wxss */

.container {
    width: 100%;
    display: block;
    height: 100%;
    padding: 100rpx 0 200rpx 0;
}

/* 头部信息 */

.head {
    width: 100%;
    height: 100rpx;
    position: fixed;
    top: 0;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.head image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin: 10rpx 0 10rpx 20rpx;
    vertical-align: middle;
}

.name {
    height: 60rpx;
    font-size: 44rpx;
    color: rgba(0, 0, 0, 0.5);
    vertical-align: middle;
    margin-left: 20rpx;
}

.more-info {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    height: 70rpx;
    width: 160rpx;
    border-radius: 40rpx;
    background-color: #89baff;
    line-height: 60rpx;
    text-align: center;
}

.more-info text {
    font-size: 44rpx;
    color: #fff;
}

/* 底部 */

.bottom {
    width: 100%;
    height: 200rpx;
    display: block;
    position: fixed;
    bottom: 0;
    background-color: #fff;
}

.icons {
    width: 100%;
    height: 80rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.icons image {
    width: 80rpx;
    height: 80rpx;
    margin-left: 59rpx;
}

.input {
    width: 100%;
    height: 120rpx;
    position: relative;
}

input {
    width: 528rpx;
    height: 76rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(137, 186, 255, 0.5);
    border: 1rpx solid #89baff;
    background-color: #e7faff;
    margin-left: 40rpx;
    margin-top: 24rpx;
    padding: 0 20rpx 0 20rpx;
    box-sizing: border-box;
    display: inline-block;
}

.send {
    display: inline-block;
    width: 116rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #89baff;
    border-radius: 30rpx;
    box-shadow: 0 4rpx 8rpx #89baff;
    font-size: 28rpx;
    color: #fff;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    text-align: center;
}
.send:active {
    box-shadow: none;
}

/* 聊天内容 */

.content {
    width: 100%;
    overflow-y: scroll;
}

.line {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-items: space-between;
}
.message-left{
    align-items: flex-start;
}
.message-right{
    align-items: flex-end;
}
.message{
    font-size: 32rpx;
    padding: 8rpx 20rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.1);
    border-radius: 12rpx;
}
.message-left .message{
    color: rgba(0, 0, 0, 0.7);
    background-color: rgba(212, 254, 255, 0.5);
    margin:10rpx 40rpx 10rpx 20rpx;
}
.message-right .message{
    color: #fff;
    background-color: rgba(137, 186, 255, 0.9);
    margin: 10rpx 20rpx 10rpx 40rpx;
}